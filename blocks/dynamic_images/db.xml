<?xml version="1.0" encoding="UTF-8"?>
<schema
  xmlns="http://www.concrete5.org/doctrine-xml/0.5"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.concrete5.org/doctrine-xml/0.5 http://concrete5.github.io/doctrine-xml/doctrine-xml-0.5.xsd">

  <table name="btDynamicImages">
    <field name="bID" type="integer">
      <unsigned/>
      <key/>
    </field>
    <field name="enableImage" type="boolean">
      <unsigned/>
      <default value="1"/>
    </field>
    <field name="cropImage" type="integer">
      <unsigned/>
      <default value="0"/>
    </field>
    <field name="cropWidth" type="integer">
      <unsigned/>
      <default value="0"/>
    </field>
    <field name="cropHeight" type="integer">
      <unsigned/>
      <default value="0"/>
    </field>
    <field name="crop" type="boolean">
      <unsigned/>
      <default value="0"/>
      <notnull/>
    </field>
    <field name="displayTitle" type="boolean">
      <unsigned/>
      <default value="1"/>
      <notnull/>
    </field>
    <field name="customClass" type="text"/>
  </table>

  <table name="btRepeatableImage">
    <field name="id" type="integer">
      <unsigned/>
      <autoincrement/>
      <key/>
    </field>
    <field name="bID" type="integer">
      <unsigned/>
    </field>
    <field name="fID" type="integer">
      <unsigned/>
      <default value="0"/>
    </field>
    <field name="title" type="text"/>
    <field name="customElementClass" type="text"/>
    <field name="sortOrder" type="integer"/>
  </table>

</schema>
